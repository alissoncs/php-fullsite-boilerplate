{% extends 'layout/wrapper.twig' %}

{% block content %}
	{% set post_destaque = null %}
	{% set current_href = base_url() ~ '/blog/' ~ categoria.slug ~ '/' ~ post.slug %}
	{% include 'components/blog-header.twig' %}
	{% include 'components/blog-menu.twig' %}
	{% set post_base_url = base_url() ~ '/blog' %}

	<div class='post-page'>
		<div class='container'>
			{% if post.thumbnail %}
				<div class='row'>
					<div class='col-12'>
						<section class='post-page-thumbnail '>
							<figure>
              {% if post.thumbnail_detalhe %}
								<img src='{{uploaded_image(post.thumbnail_detalhe)}}' alt='{{post.titulo}}' title='{{post.titulo}}'/>
                {% else %}
								<img src='{{uploaded_image(post.thumbnail)}}' alt='{{post.titulo}}' title='{{post.titulo}}'/>
                {% endif %}
							</figure>
						</section>
					</div>
				</div>
			{% endif %}
			<div class='row'>
				<div class='col-lg-8'>
					<article class='content-wrapper'>
						<h1 class='post-title'>{{post.titulo}}</h1>
						<div class='row post-head'>
							<div class='col-12 col-lg-6'></div>
							<div class='col-12 col-lg-6'>
								<div class='post-meta'>
									<span class='date'>
										{{human_date(post.created_at)}}
									</span>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-lg-12'>
								<div class='content'>
									{% if post.conteudo %}
										{{ post.conteudo|raw }}
									{% else %}
										{{ post.descricao }}
									{% endif %}
								</div>
							</div>
						</div>
						<footer class='post-footer'>
							<a href='#post-comments' class='icon-comments' title='Comentários'>

								<svg height="14.826" viewbox="0 0 17.294 14.826" width="17.294" xmlns="http://www.w3.org/2000/svg">
									<path class="a" d="M16.136,39.581a7.823,7.823,0,0,0-3.146-2.249,11.219,11.219,0,0,0-4.343-.825,11.475,11.475,0,0,0-3.358.487,9.393,9.393,0,0,0-2.76,1.317A6.583,6.583,0,0,0,.685,40.285,4.6,4.6,0,0,0,0,42.683,4.683,4.683,0,0,0,.873,45.4a7.086,7.086,0,0,0,2.389,2.123,6.134,6.134,0,0,1-.251.733q-.145.347-.261.57a3.921,3.921,0,0,1-.314.492q-.2.27-.3.381l-.333.367q-.231.256-.3.333a.675.675,0,0,0-.077.087l-.068.082L1.3,50.65q-.048.073-.044.092a.257.257,0,0,1-.019.1.128.128,0,0,0,0,.116v.01a.485.485,0,0,0,.169.28.378.378,0,0,0,.294.087,7.245,7.245,0,0,0,1.1-.212,10.548,10.548,0,0,0,4.439-2.336,13.2,13.2,0,0,0,1.4.077,11.215,11.215,0,0,0,4.343-.825,7.821,7.821,0,0,0,3.146-2.248,4.735,4.735,0,0,0,0-6.2Z" transform="translate(0 -36.507)"/></svg>
								<span class='fb-comments-count' data-href={{current_href}}>0</span>
							</a>
							<a class='icon-likes' data-post='{{post.id}}' title='Likes'>
								<svg height="14.831" viewbox="0 0 17.12 14.831" width="17.12" xmlns="http://www.w3.org/2000/svg">

									<g transform="translate(0)">
										<g transform="translate(0 0)"><path class="a" d="M17.12,37.575a4.62,4.62,0,0,0-8.56-2.414,4.619,4.619,0,1,0-6.973,5.9l6.551,6.552a.6.6,0,0,0,.844,0l6.551-6.552A4.606,4.606,0,0,0,17.12,37.575Z" transform="translate(0 -32.952)"/></g>
									</g>
								</svg>
								<span class='count'>{{post.likes}}</span>
							</a>
							<span class='icon-shares' title='Compartilhamentos'>

								<svg height="16.068" viewbox="0 0 15.932 16.068" width="15.932" xmlns="http://www.w3.org/2000/svg">
									<g transform="translate(0)"><path class="a" d="M15.008,10.212a2.909,2.909,0,0,0-2.287,1.122L7.749,8.791a2.909,2.909,0,0,0,.112-.758,2.885,2.885,0,0,0-.133-.821l4.95-2.531a2.915,2.915,0,1,0-.6-1.754,2.9,2.9,0,0,0,.113.76L7.223,6.229a2.925,2.925,0,1,0,.043,3.556l4.948,2.531a2.892,2.892,0,0,0-.134.823,2.928,2.928,0,1,0,2.927-2.928Z" transform="translate(-2.006)"/></g>
								</svg>
								{{post.shares}}
              </span>
						</footer>
					</article>

					{% if related_posts and related_posts is not empty %}
						<hr/>
						<section class='related-posts'>
							<h3 class='related-posts-title'>Recomendados</h2>
							<div class='row'>
								{% for b in related_posts %}
									<div class='col-lg-6'>
										{% include 'components/post-item.twig' %}
									</div>
								{% endfor %}
							</div>
						</section>
					{% endif %}
					<hr/>
					<section class='comments' id='post-comments'>
						<h3 class='comments-title'>Comentários</h3>
						<div class="fb-comments" data-href="{{current_href}}" data-numposts="5" data-width=""></div>
					</section>


				</div>

				<div class='col-lg-4'>
					{% include 'components/blog-sidebar.twig' %}

				</div>
			</div>
		</div>
	</div>
{% endblock %}
