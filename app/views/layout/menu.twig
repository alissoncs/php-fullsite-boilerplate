		{% if menu_header %}
			{% for i in menu_header %}
				{% if i.id != 44 %}
					<li class='item-menu-dynamic'>
						<a href='{{base_url()}}/{{i.slug}}'>{{i.titulo}}</a>
						{% if i.childs and i.childs|length %}

							<div class='submenu'>
								<div class='submenu-inner'>
									<div class='container'>
										<div class='row align-items-center'>
											{% set with_childs = i.childs|filter(c => c.childs and c.childs|length > 0) %}
											{% set without_childs = i.childs|filter(c => not c.childs or c.childs|length == 0) %}

											{% for c in with_childs %}
												<div class='col-lg-3'>
													<div class='block-menu {% if c.childs and c.childs|length %}has-childs{% endif %}'>
														<h4>
															<a title='{{c.titulo}}' href='{{base_url()}}/{{i.slug}}/{{c.slug}}'>{{c.titulo}}</a>
														</h4>
