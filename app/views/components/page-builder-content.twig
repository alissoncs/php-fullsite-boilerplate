{% if page_builder_content %}
    <div class='page-builder-content row'>
        {% for component in page_builder_content %}
            {% set css = 'col-lg-12' %}
            {% if component.size == '1' %}
                {% set css = 'col-lg-12' %}
            {% elseif component.size == '1-2' %}
                {% set css = 'col-lg-6' %}
            {% elseif component.size == '1-3' %}
                {% set css = 'col-lg-4' %}
            {% endif %}

            <div data-json='{{component|json_encode}}' class='component-wrapper type-{{component.type}} {{css}}'>
                {% set options = component.options %}
                {% include 'components/widget-page-builder-'~component.type~'.twig' with {
                  'options': component.options,
                  'pagina': pagina,
                } %}
            </div>
        {% endfor %}
    </div>

{% endif %}
